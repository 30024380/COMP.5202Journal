//Purpose: For Loop
            
            // The amount of times the loop can cycle
            int limit = 5;

            // For Display purposes, displaying the numbers correctly
            Console.WriteLine("N\t\t10*N\t\t100*N\t\t1000*N");
            
            // the loop conditions
            for (int counter = 1; counter <= limit; counter++)
            {   
                // 1++ times 10
                Console.Write(counter * 10 + "\t\t");    
                            
                Console.ReadLine();
            }
        




        
    



